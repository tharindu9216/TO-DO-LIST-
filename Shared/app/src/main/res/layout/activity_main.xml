<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bk"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/notesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a note"
        android:padding="10dp"
        android:backgroundTint="#000000"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save Note"
        android:layout_below="@id/notesEditText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"/> <!-- Red button -->

    <Button
        android:id="@+id/displayNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Display Note"
        android:layout_below="@id/saveNoteButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"/> <!-- Red button -->

    <Button
        android:id="@+id/updateNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Update Note"
        android:layout_below="@id/displayNoteButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"/> <!-- Red button -->

    <Button
        android:id="@+id/deleteNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Delete Note"
        android:layout_below="@id/updateNoteButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"/> <!-- Red button -->

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your note will appear here"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/deleteNoteButton"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noteTextView"
        android:layout_marginTop="16dp"
        android:text="Date and Time will be notified in due course..."
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>
